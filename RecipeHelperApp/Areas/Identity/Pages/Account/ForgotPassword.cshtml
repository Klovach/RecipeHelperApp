@page
@model ForgotPasswordModel
@{
    Layout = "~/Views/Shared/_AccountRecoveryLayout.cshtml";
    ViewData["Title"] = "Forgot your password?";
}
<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success"><i class="fas fa-unlock-alt"></i> Reset Password</button>
        </form>
        <div class="mt-3">
            <p><i class="fas fa-arrow-left"></i> Remember your password?  <a asp-page="./Login">Login</a></p>
            <p><i class="fas fa-user-plus"></i> Don't have an account?  <a asp-page="./Register">Register</a></p>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
