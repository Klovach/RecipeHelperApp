@page
@model ForgotPasswordConfirmation
@{
    Layout = "~/Views/Shared/_AccountRecoveryLayout.cshtml";
    ViewData["Title"] = "Forgot password confirmation";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/theme/img/undraw_posting_photo.svg" class="img-fluid" alt="Posting Photo">
        </div>
        <div class="col-md-6">
            <h1>Recovery Email Sent</h1>
            <p>It looks like you're ready to reset your password! Check your email to reset your password!</p>
            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-success"><i class="fas fa-lock"></i> Resend password reset?</a>
            <br />
            <div class="mt-3">
                <p><i class="fas fa-arrow-left"></i> Remember your password?  <a asp-page="./Login">Login</a></p>
                <p><i class="fas fa-user-plus"></i> Don't have an account?  <a asp-page="./Register">Register</a></p>
            </div>
        </div>
    </div>
</div>
