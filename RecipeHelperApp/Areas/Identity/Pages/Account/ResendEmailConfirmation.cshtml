@page
@model ResendEmailConfirmationModel
@{
    Layout = "~/Views/Shared/_AccountRecoveryLayout.cshtml";
    ViewData["Title"] = "Resend email confirmation";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success"><i class="fas fa-envelope"></i> Resend</button>
        </form>
        <div class="mt-3">
            <p><i class="fas fa-arrow-left"></i> Remember your password? <a href="/Account/Login">Login</a></p>
            <p><i class="fas fa-user-plus"></i> Don't have an account? <a href="/Account/Register">Register</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
