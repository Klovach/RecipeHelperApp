@model IEnumerable<RecipeHelperApp.Models.Week>

@{
    ViewData["Title"] = "Index";
}

    
    <!-- Dashboard Header -->
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Weeks Dashboard</h5>
                </div>
                <div class="card-body">
                    <!-- Brief About -->
                    <div class="mb-4">
                        <p>Welcome to the Weeks Dashboard! This dashboard provides you with an overview of your meal plans, allowing you to manage your meal plans with ease. Have a look around and enjoy the dummy text!</p>
                    </div>
                    <hr />
                    <!-- Banner Image with Menu Shortcuts -->
                    <div class="row align-items-center">
                        <!-- Banner Image -->
                        <div class="col-md-6 mb-4">
                            <img src="~/theme/img/undraw_term_sheet_re_ju7s.svg" class="img-fluid" alt="Banner Image">
                        </div>
                        <!-- Menu Shortcuts -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6><i class="fas fa-calendar-plus"></i> Create New Week</h6>
                                <p>Add a new week to your schedule.</p>
                            </div>
                            <div class="mb-3">
                                <h6><i class="fas fa-eye"></i> See Recipes</h6>
                                <p>See the recipes in your meal plan for each weekday!</p>
                            </div>
                            <div class="mb-3">
                                <h6><i class="fas fa-user-edit"></i> Edit Profile</h6>
                                <p>Not happy with your results? Edit your nutritional form by clicking the <a asp-controller="NutritionForms" asp-action="Index"> <i class="fas fa-external-link-alt"></i> link</a> below.</p>
                            </div>
                            <div class="btn-group">
                                    <a class="btn btn-primary btn-sm md-2" asp-action="Create"><i class="fas fa-plus"></i> Create Week</a>
                                    <a class="btn btn-outline-secondary btn-sm" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i> Back To Home</a>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="col-md-4 align-items-stretch">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-calendar-week"></i> Weeks</h5>
                </div>
                <div class="card-body">
                    <!-- Weeks Listing -->
                    @foreach (var item in Model)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.WeekName)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                <div class="d-flex justify-content-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-2"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

