@model RecipeHelperApp.ViewModels.NutritionFormDTO

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>NutritionForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncludeNutrition" /> @Html.DisplayNameFor(model => model.IncludeNutrition)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IncludeIngredients" /> @Html.DisplayNameFor(model => model.IncludeIngredients)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExcludeIngredients" /> @Html.DisplayNameFor(model => model.ExcludeIngredients)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IncludedIngredients" class="control-label"></label>
                <input asp-for="IncludedIngredients" class="form-control" />
                <span asp-validation-for="IncludedIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExcludedIngredients" class="control-label"></label>
                <input asp-for="ExcludedIngredients" class="form-control" />
                <span asp-validation-for="ExcludedIngredients" class="text-danger"></span>
            </div>
            <!-- ALL ATTRIBUTES -->
            <div class="form-group">
                <label asp-for="Nutrients.Calories" class="control-label"></label>
                <input asp-for="Nutrients.Calories" class="form-control" />
                <span asp-validation-for="Nutrients.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Protein" class="control-label"></label>
                <input asp-for="Nutrients.Protein" class="form-control" />
                <span asp-validation-for="Nutrients.Protein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Carbs" class="control-label"></label>
                <input asp-for="Nutrients.Carbs" class="form-control" />
                <span asp-validation-for="Nutrients.Carbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Fat" class="control-label"></label>
                <input asp-for="Nutrients.Fat" class="form-control" />
                <span asp-validation-for="Nutrients.Fat" class="text-danger"></span>
            </div>
            <!-- PARENT OBJECT: USER -->
            <div class="form-floating mb-3">
                <p>Test</p>
                <label asp-for="Weight">Weight (Lbs)</label>
                <input type="number" asp-for="Weight" class="form-control" autocomplete="off" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="ActivityLevel">Activity Level</label>
                <select asp-for="ActivityLevel" class="form-control" aria-required="true">
                    <option value="">Select Activity Level</option>
                    <option value="Sedentary">Sedentary</option>
                    <option value="Minimally Active">Minimally Active</option>
                    <option value="Moderately Active">Moderately Active</option>
                    <option value="Very Active">Very Active</option>
                    <option value="Extremely Active">Extremely Active</option>
                </select>
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="FitnessGoal">Fitness Goal</label>
                <select id="fitnessGoal" asp-for="FitnessGoal" class="form-control" aria-required="true">
                    <option value="">Select Fitness Goal</option>
                    <option value="Lose Weight">Lose Weight</option>
                    <option value="Maintain Weight">Maintain Weight</option>
                    <option value="Gain Weight">Gain Weight</option>
                </select>
                <span asp-validation-for="FitnessGoal" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="TargetWeight">Target Weight (lbs)</label>
                <input type="decimal" asp-for="TargetWeight" class="form-control" autocomplete="off" />
                <span asp-validation-for="TargetWeight" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="TargetWeightDate">Target Weight Date</label>
                <input type="date" asp-for="TargetWeightDate" class="form-control" autocomplete="off" />
                <span asp-validation-for="TargetWeightDate" class="text-danger"></span>
            </div>


            
              @if (ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                        <span>@error.ErrorMessage</span>

                        <br />
                    }
                </div>
            }



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
