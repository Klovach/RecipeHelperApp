@model RecipeHelperApp.ViewModels.NutritionFormDTO

@{
    ViewData["Title"] = "View";
}


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <!-- User ID -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Sex" />
            <input type="hidden" asp-for="Height" />
            <input type="hidden" asp-for="Age" />

    
            <!-- NUTRITIONAL CHECKS -->
            <div class="col-md-6">
                <h3 class="h3 mb-4 text-gray-800">Edit Your Nutritional Form</h3>
                <div class="card mb-4">
                    <div class="card-header">
                        My Pantry
                    </div>
                    <div class="card-body">
                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IncludeNutrition" id="includeNutritionCheckbox">
                            <label class="form-check-label" for="includeNutritionCheckbox">
                                Include Nutrition
                            </label>
                            <br />
                            <i>By checking "include nutrition", you are using your nutritional data when generating your meals.</i>
                        </div>

                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IncludeServings" id="includeServingsCheckbox">
                            <label asp-for="IncludeServings" class="control-label" for="includeServingsCheckbox">
                                Specify Number of Servings
                                <span class="checkmark"></span>
                            </label>
                            <select asp-for="Servings" class="form-control" id="servingsSelect" name="Servings">
                                <option value="1">1 serving</option>
                                <option value="2">2 servings</option>
                                <option value="3">3 servings</option>
                                <option value="4">4 servings</option>
                            </select>
                            <span asp-validation-for="Servings" class="text-danger"></span>
                        </div>


                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IncludeIngredients" id="includeIngredientsCheckbox">
                            <label asp-for="IncludedIngredients" class="control-label" for="includeIngredientsCheckbox">
                                Include Ingredients
                                <span class="checkmark"></span>
                            </label>
                            <input asp-for="IncludedIngredients" class="form-control" />
                            <span asp-validation-for="IncludedIngredients" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="ExcludeIngredients" id="excludeIngredientsCheckbox">
                            <label asp-for="ExcludedIngredients" class="control-label" for="excludeIngredientsCheckbox">
                                Exclude Ingredients
                                <span class="checkmark"></span>
                            </label>
                            <input asp-for="ExcludedIngredients" class="form-control" />
                            <span asp-validation-for="ExcludedIngredients" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>




            
            <!-- NUTRIENTS TABLE -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Macronutrients Table
                    </div>
                    <div class="card-body">
            <div class="form-group">
                <label asp-for="Nutrients.Calories" class="control-label"></label>
                <input type="number" asp-for="Nutrients.Calories" class="form-control" />
                <span asp-validation-for="Nutrients.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Protein" class="control-label"></label>
                <input type="number" asp-for="Nutrients.Protein" class="form-control" />
                <span asp-validation-for="Nutrients.Protein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Carbohydrates" class="control-label"></label>
                 <input type="number" asp-for="Nutrients.Carbohydrates" class="form-control" />
                <span asp-validation-for="Nutrients.Carbohydrates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrients.Fat" class="control-label"></label>
                <input type="number" asp-for="Nutrients.Fat" class="form-control" />
                <span asp-validation-for="Nutrients.Fat" class="text-danger"></span>
            </div>
            </div>
                </div>
            </div>

     
            <!-- PARENT OBJECT: USER -->
            <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    My Health
                </div>
                <div class="card-body">
            <div class="form-floating mb-3">
                <p>Test</p>
                <label asp-for="Weight">Weight (Lbs)</label>
                <input type="number" asp-for="Weight" class="form-control" autocomplete="off" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="ActivityLevel">Activity Level</label>
                <select asp-for="ActivityLevel" class="form-control" aria-required="true">
                    <option value="">Select Activity Level</option>
                    <option value="Sedentary">Sedentary</option>
                    <option value="Minimally Active">Minimally Active</option>
                    <option value="Moderately Active">Moderately Active</option>
                    <option value="Very Active">Very Active</option>
                    <option value="Extremely Active">Extremely Active</option>
                </select>
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="FitnessGoal">Fitness Goal</label>
                <select id="fitnessGoal" asp-for="FitnessGoal" class="form-control" aria-required="true">
                    <option value="">Select Fitness Goal</option>
                    <option value="Lose Weight">Lose Weight</option>
                    <option value="Maintain Weight">Maintain Weight</option>
                    <option value="Gain Weight">Gain Weight</option>
                </select>
                <span asp-validation-for="FitnessGoal" class="text-danger"></span>
            </div>

                        <div class="form-floating mb-3">
                            <label asp-for="PoundsPerWeek">Pounds Per Week</label>
                            <select id="poundsPerWeek" asp-for="PoundsPerWeek" class="form-control" aria-required="true">
                                <option value="0.5">Relaxed (0.5 lbs per week)</option>
                                <option value="1">Moderate (1 lbs per week)</option>
                                <option value="2">Intense (2 lbs per week)</option>
                            </select>
                            <span asp-validation-for="PoundsPerWeek" class="text-danger"></span>
                        </div>


            </div>
                    </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
        </form>
            </div>
            




         
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
