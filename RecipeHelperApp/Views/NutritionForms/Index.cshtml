@model RecipeHelperApp.ViewModels.NutritionFormDTO

@{
    ViewData["Title"] = "Details";
}


   <div class="card shadow mb-4">

            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Details</h6>
            </div>

<div class="card-body">
    <h4>NutritionForm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncludeNutrition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncludeNutrition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncludeIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncludeIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExcludeIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExcludeIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncludedIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncludedIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExcludedIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExcludedIngredients)
        </dd>
        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nutrients.Calories)</dd>
        <dt class="col-sm-2">Carbs</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nutrients.Carbs)</dd>
        <dt class="col-sm-2">Protein</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nutrients.Protein)</dd>
        <dt class="col-sm-2">Fat</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nutrients.Fat)</dd>
        <dt class="col-sm-2">Weight</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Weight)</dd>
        <dt class="col-sm-2">Target Weight</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TargetWeight)</dd>
        <dt class="col-sm-2">Target Weight Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TargetWeightDate)</dd>
        <dt class="col-sm-2">Activity Level</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ActivityLevel)</dd>
        <dt class="col-sm-2">Fitness Goal</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FitnessGoal)</dd>
    </dl>
</div>
</div>

    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Details" asp-route-id="@Model?.Id">Details</a> |
    <a asp-action="Restart" asp-route-id="@Model?.Id">Reset</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>  |
    <a asp-action="Recalculate" asp-route-id="@Model?.Id">Recalculate</a>
