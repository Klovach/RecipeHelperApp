@model RecipeHelperApp.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row d-flex flex-wrap">

        <div class="col-md-6 d-flex align-items-stretch">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-utensils"></i> @Model.Name</h5>
                </div>
                <img src="@Url.Content(Model.Image)" class="img-fluid" alt="Recipe Image">
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p>
                            <i class="fas fa-exclamation-triangle"></i>
                            Disclaimer: 
                            This recipe has been generated with the assistance of AI for educational purposes.
                            Please use discretion and consult a nutritionist.
                        </p>
                    </div>
                </div>
                <div class="card-footer bg-success text-white">
                    <a asp-action="Generate" asp-route-id="@Model.Id" class="btn btn-success"><i class="fas fa-magic"></i> Regenerate?</a>
                </div>
            </div>
        </div>


        <div class="col-md-6 d-flex align-items-stretch">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Recipe Data</h4>
                 
                    <table class="table">

                        <p><i class="fas fa-info-circle"></i> @Html.Raw(Model.Description != null ? Model.Description.Replace("\n", "<br/>") : "")</p>
                        <tbody>
                            <tr>
                                <td class="text-no-wrap"><i class="fas fa-calendar-day"></i> </td>
                                <td>@Model.Day.WeekDay</td>
                            </tr>
                            <tr>
                                <td class="text-no-wrap"><i class="fas fa-utensils"></i> </td>
                                <td>@Model.MealType</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-heading"></i> </td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-chart-pie"></i> </td>
                                <td>@Model.Servings Serving(s)</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-fire"></i> </td>
                                <td>Serving Size @Html.Raw(Model.GetNutrientAsString("Serving Size", Model.ServingSize))</td>
                            </tr>
                            <tr>
                                <td class="text-no-wrap"><i class="fas fa-list-ul"></i> </td>
                                <td>@Html.Raw(Model.Instructions != null ? Model.Instructions.Replace("\n", "<br/>") : "")</td>
                            </tr>
                            <tr>
                                <td class="text-no-wrap"><i class="fas fa-shopping-basket"></i> </td>
                                <td>@Html.Raw(Model.Ingredients != null ? Model.Ingredients.Replace("\n", "<br/>") : "")</td>
                            </tr>
                        </tbody>
                    </table>


                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Index", "Recipes", new { dayId = Model.DayId })" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>


       


    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nutritional Information</h4>
                    <hr />
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><i class="fas fa-fire"></i> Calories</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Calories", Model.Calories))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-drumstick-bite"></i> Protein</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Protein", Model.Protein))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-oil-can"></i> Fat</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Fat", Model.Fat))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-bread-slice"></i> Carbohydrates</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Carbohydrates", Model.Carbohydrates))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-water"></i> Sodium</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Sodium", Model.Sodium))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-dna"></i> Potassium</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Potassium", Model.Potassium))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-heartbeat"></i> Cholesterol</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Cholesterol", Model.Cholesterol))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-tree"></i> Fiber</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Fiber", Model.Fiber))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-cube"></i> Sugar</td>
                                <td>@Html.Raw(Model.GetNutrientAsString("Sugar", Model.Sugar))</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



