@model RecipeHelperApp.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-utensils"></i> @Model.Name</h5>
                </div>
                <img src="@Url.Content(Model.Image)" class="img-fluid" alt="Recipe Image">
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p>
                            <i class="fas fa-exclamation-triangle"></i>
                            Disclaimer: 
                            This recipe has been generated with the assistance of AI for educational purposes.
                            Please use discretion and consult a nutritionist.
                        </p>
                    </div>
                </div>
                <div class="card-footer bg-success text-white">
                    <button class="btn btn-success"><i class="fas fa-magic"></i> Regenerate?</button>
                </div>
            </div>
        </div>


        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Recipe Data</h4>
                 
                    <table class="table">

                        <p><i class="fas fa-info-circle"></i> @Html.Raw(Model.Description != null ? Model.Description.Replace("\n", "<br/>") : "")</p>
                        <tbody>
                            <tr>
                                <td><i class="fas fa-calendar-day"></i> Day</td>
                                <td>@Model.Day.Id</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-utensils"></i> Meal Type</td>
                                <td>@Model.MealType</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-heading"></i> Name</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-list-ul"></i> Instructions</td>
                                <td>@Html.Raw(Model.Instructions != null ? Model.Instructions.Replace("\n", "<br/>") : "")</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-shopping-basket"></i> Ingredients</td>
                                <td>@Html.Raw(Model.Ingredients != null ? Model.Ingredients.Replace("\n", "<br/>") : "")</td>
                            </tr>
                        </tbody>
                    </table>


                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Index", "Recipes", new { dayId = Model.DayId })" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>


       


    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nutritional Information</h4>
                    <hr />
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><i class="fas fa-fire"></i> Calories</td>
                                <td>@Html.Raw(Model.GetNutrientAsString(Model.Calories))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-drumstick-bite"></i> Protein</td>
                                <td>@Html.Raw(Model.GetNutrientAsString(Model.Protein))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-oil-can"></i> Fat</td>
                                <td>@Html.Raw(Model.GetNutrientAsString(Model.Fat))</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-bread-slice"></i> Carbs</td>
                                <td>@Html.Raw(Model.GetNutrientAsString(Model.Carbs))</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a href="@Url.Action("Index", "Recipes", new { dayId = Model.DayId })">Back to List</a>
</div>

